{
  "testRunner": "jest",
  "runnerConfig": "e2e/config.json",
  "skipLegacyWorkersInjection": true,
  "apps": {
    "ios": {
      "type": "ios.app",
      "binaryPath": "./ios/Build/Products/Debug-iphonesimulator/expense_manager_fe.app",
      "build": "xcodebuild -workspace ./ios/expense_manager_fe.xcworkspace -configuration Debug -scheme expense_manager_fe -sdk iphonesimulator -arch x86_64 -derivedDataPath ./ios/"
    },
    "android": {
      "type": "android.apk",
      "binaryPath": "./android/app/build/outputs/apk/debug/app-debug.apk",
      "build": "cd android && ./gradlew assemble assembleAndroidTest  && cd .."
    }
  },
  "devices": {
    "simulator": {
      "type": "ios.simulator",
      "device": {
        "type": "iPhone 12"
      }
    },
    "emulator": {
      "type": "android.emulator",
      "device": {
        "avdName": "emu2"
      }
    }
  },
  "configurations": {
    "ios": {
      "device": "simulator",
      "app": "ios",
      "artifacts": false
    },
    "android": {
      "device": "emulator",
      "app": "android",
      "artifacts": false
    }
  }
}